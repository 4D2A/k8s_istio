---
apiVersion: v1
kind: Service
metadata:
  # Service hostname
  name: hellogo-svc
  namespace: default
spec:
  # Pods selector
  selector:
    app: hellogo
  # Service ports
  ports:
  - port: 80
    targetPort: 8080
    # Protocol and name required for Istio < 1.5 (https://discuss.istio.io/t/upstream-connect-error-or-disconnect-reset-before-headers-reset-reason-connection-termination/4434/10)
    protocol: TCP
    name: http-query

---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: hellogo-vs
  namespace: default
spec:
  hosts:
  - "*"
  gateways:
  - {{ k8s_istio_custom_hellgo_gateway | default("istio-system/istio-gateway") }}
  http:
  - match:
    - uri:
        prefix: "/hellogo"
    route:
    - destination:
        # Service selector
        host: hellogo-svc
        port:
          number: 80
